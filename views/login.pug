extends layout

block content
  .col-lg-12
    section.d2-post
       .post-list.fade-in
          .row.row-wrapper
            .col-lg-12
               .error-disp
                  != messages('message', locals)
                  if errors 
                    each error, i in errors
                      div(class="alert alert-danger") #{error.msg}
            .col-lg-6.form-holder
                h1.login Login 
                form.account-form.row(method='POST', action='/user/login')
                  .form-field.col-lg-6
                    input#email.input-text(name='username', type='text')
                    label.label(for='username') username
                  .form-field.col-lg-6
                    input#password.input-text.not-empty(name='password', type='password')
                    label.label(for='email') Password
                  .form-field.col-lg-12.align-center
                    input.submit-btn(value='Login', type='submit')
                  .col-lg-12.align-center.sign-up
                    p.connect-now
                      span
                        a.passwrd-recovry(href='/#') Forgot password?
                
