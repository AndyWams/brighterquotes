extends layout

block content
  .col-lg-12
    section.d2-post
       .post-list.fade-in
          .row.row-wrapper
            .col-lg-12
               .error-disp
                  != messages('message', locals)
                  if errors 
                    each error, i in errors
                      div(class="alert alert-danger") #{error.msg}
            .col-lg-6.form-holder
                h1.login Reset Password
                form.account-form.row(method='POST', action='/reset')
                  .form-field.col-lg-6
                    input#password.input-text(name='password', type='text')
                    label.label(for='password') Password
                  .form-field.col-lg-6
                    input#password2.input-text.not-empty(name='password2', type='password')
                    label.label(for='password2') Confirm Password
                  .form-field.col-lg-12.align-center
                    input.submit-btn(value='Update Password', type='submit')
                  
