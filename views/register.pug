extends layout

block content            
  .col-lg-12
      section.d2-post
        .post-list.fade-in
          .row.row-wrapper
            .col-lg-12
               .error-disp
                  != messages('message', locals)
                  if errors 
                    each error, i in errors
                      div(class="alert alert-danger") #{error.msg}
            .col-lg-6.form-holder
              h1.signup Signup Now - It's Free!
              form.account-form.row(method='POST', action='/user/register')
                .form-field.col-lg-6
                  input#name.input-text.js-text(name='name' type='text', required='')
                  label.label(for='name') Name
                .form-field.col-lg-6
                  input#username.input-text.js-text(name='username' type='text', required='')
                  label.label(for='username') Username
                .form-field.col-lg-12
                  input#email.input-text.js-text(name='email' type='text', required='')
                  label.label(for='email') Email
                .form-field.col-lg-6.align-center
                  input#password.input-text.js-text(name='password', type='password' required='')
                  label.label(for='password') Password
                .form-field.col-lg-6.align-center
                  input#password2.input-text.js-text(name='password2', type='password' required='')
                  label.label(for='password2') Confirm Password
                .form-field.col-lg-12.align-center
                  input.submit-btn(type='submit', value='Signup')
                .col-lg-12.align-center.create-new
                  p.create-now
                    a.tnc(href='#') Terms of service and usage
                    
                    

